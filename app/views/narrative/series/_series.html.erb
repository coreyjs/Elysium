<div class="bg-neutral shadow-lg rounded-lg p-4 border border-primary mb-4">
  <!-- Narrative Series Details -->
  <div class="mb-4">
    <h2 class="text-2xl font-semibold mb-2"><%= @narrative_series.title %></h2>
    <p class="text-sm text-secondary"><%= @narrative_series.description %></p>
    <p class="mt-2 text-xs text-gray-500">Export Name: <%= @narrative_series.export_name %></p>
  </div>

  <!-- Narrative Roots -->
  <div class="narrative-roots-section">
    <h3 class="text-lg font-semibold mb-2 font-secondary">Narrative Roots (Quests)</h3>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 narrative-root-grid" data-project-id="<%= @narrative_series.id %>">
      <% @narrative_series.narrative_roots.each do |nr| %>
        <div class="bg-gray-100 p-4 rounded-lg shadow-md">
          <h4 class="font-bold text-primary mb-2">
            <%= link_to nr.title, project_narrative_series_root_path(@narrative_series.project, @narrative_series, nr) %>
          </h4>
          <p class="text-sm text-secondary">Steps: <%= nr.narrative_steps.length %></p>
        </div>
      <% end %>
      <div class="bg-gray-100 p-4 rounded-lg shadow-md flex items-center justify-center cursor-pointer add-narrative-root" data-project-id="<%= @narrative_series.id %>">
        <span class="text-2xl text-gray-500">+</span>
      </div>
    </div>
  </div>

</div>
