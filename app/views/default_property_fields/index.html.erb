<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Default property fields" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Default property fields</h1>
    <%= link_to "New default property field", new_default_property_field_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="default_property_fields" class="min-w-full">
    <% @default_property_fields.each do |default_property_field| %>
      <%= render default_property_field %>
      <p>
        <%= link_to "Show this default property field", default_property_field, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
