<%= form_with(model: project, local: true) do |form| %>
  <div class="bg-white shadow-lg rounded-lg p-4 border border-primary mb-4">
    <!-- Project Title -->
    <div class="mb-4">
      <%= form.label :title, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :title, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-500 focus:ring-opacity-50 text-black" %>
    </div>

    <!-- Project Status -->
    <div class="mb-4">
      <%= form.label :deleted, class: "block text-sm font-medium text-gray-700" do %>
        Deleted
        <%= form.check_box :deleted, class: "mt-1 block" %>
      <% end %>
    </div>

    <!-- Submit Button -->
    <div class="text-right">
      <%= form.submit "Save", class: "bg-primary text-white font-semibold py-2 px-4 rounded hover:bg-primary-dark" %>
    </div>
  </div>
<% end %>
