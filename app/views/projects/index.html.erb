<div class="">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <!-- app/views/projects/index.html.erb -->

  <div class="container mx-auto px-4 py-8">
    <h1 class="text-2xl font-bold mb-4 font-primary">Projects</h1>

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
      <% @projects.each do |project| %>
        <div class="bg-white shadow-lg rounded-lg p-4 border border-primary">
          <h2 class="text-lg font-semibold mb-2 font-secondary text-black">
            <%= link_to project.title, project %>
          </h2>
          <p class="mb-4 flex items-center space-x-2">
            <% if not project.deleted %>
              <span class="inline-block bg-green-100 text-green-800 text-xs px-2 py-1 rounded-full">Active</span>
            <% else %>
              <span class="inline-block bg-red-100 text-red-800 text-xs px-2 py-1 rounded-full">Inactive</span>
            <% end %>
            <span class="text-sm text-black">Quests: <%= project.narrative_series.length %></span>
          </p>

        </div>
      <% end %>
    </div>
  </div>
</div>
